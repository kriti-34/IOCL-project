# Environment Variables for IOCL Intern Portal Backend

# Node Environment
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/iocl_intern_portal"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-must-be-at-least-32-characters-long-for-security"
JWT_EXPIRES_IN="7d"

# AWS S3 Configuration (Optional - for file storage)
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
S3_BUCKET="iocl-intern-portal-files"

# Email Configuration (Optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"  # Max requests per window

# File Upload Configuration
MAX_FILE_SIZE="5242880"  # 5MB in bytes
UPLOAD_DIR="./uploads"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Security Configuration
BCRYPT_ROUNDS="12"

# Production Database URL (for deployment)
# DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# Production CORS Origin (for deployment)
# CORS_ORIGIN="https://your-production-domain.com"

# Additional Production Variables
# REDIS_URL="redis://localhost:6379"  # For session storage
# SENTRY_DSN="your-sentry-dsn"        # For error tracking